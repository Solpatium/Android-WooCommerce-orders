<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_collapseParallaxMultiplier="1.0"
    android:layout_margin="10dp"
    android:weightSum="1">

    <TextView
        android:id="@+id/product_id"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:text="#3213"
        android:textAlignment="center"
        android:textColor="#999"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Product name"
        android:layout_marginLeft="10dp"
        android:textColorLink="#00a0d2"
        android:elevation="0dp"
        android:layout_toRightOf="@+id/product_id"
        android:textColor="@android:color/background_dark"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/product_count"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:text="100"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif"
        android:textColorLink="#00a0d2"
        android:elevation="0dp"
        android:textColor="@color/cardview_dark_background"
        android:gravity="right|center_vertical"
        android:layout_toLeftOf="@+id/multiplicator"/>
    <TextView
        android:id="@+id/multiplicator"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:text="x"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif"
        android:textColorLink="#00a0d2"
        android:elevation="0dp"
        android:textColor="#00a0d2"
        android:gravity="right|center_vertical"
        android:layout_toLeftOf="@+id/product_price"/>

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:text="20$"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:textColor="#999"
        android:gravity="right|center_vertical"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:id="@+id/product_meta"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/product_id">

    </LinearLayout>
</RelativeLayout>